{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
    "strict": false,
    "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true

	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
    "./config/jest/jest-setup.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
	]
}
